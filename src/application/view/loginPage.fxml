                  <Font name="Bell MT Italic" size="24.0" />
               </font>
            </Label>
            <Label fx:id="usernameLabel" layoutX="14.0" layoutY="110.0" prefHeight="29.0" prefWidth="122.0" text="Username">
               <font>
                  <Font name="Bodoni MT Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="passwordLabel" layoutX="14.0" layoutY="176.0" prefHeight="29.0" prefWidth="122.0" text="Password">
               <font>
                  <Font name="Bodoni MT Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="usernameTxtField" layoutX="144.0" layoutY="112.0" prefHeight="25.0" prefWidth="228.0" promptText="Username" />
